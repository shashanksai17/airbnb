      <% layout("layout/boilerplate") %>
    <div class="row mt-3">
        <div class="cols-6 offset-3">
            <div class="card col-6 listing-card">
            <img src="<%=listing.image.url%>" alt="<%=listing.title%>" class="card-img-top show-img">
                <div class="card-body">
                    <p class="card-text">
                        <b><%=listing.title%></b><br>
                        <i><%= listing.owner.username%></i>
                        <br>
                        <%=listing.description%><br>
                       <%= listing.price?.toLocaleString("en-In") %>
                        <br>
                        <%=listing.location%>
                        <br>
                        <%=listing.country%>
                        <br>
                    </p>
                </div>
            </div>
        <% if(currUser && listing.owner._id.equals(currUser._id)) {%>
        <div class="btns">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-1">edit</a>
    
    <form action="/listings/<%=listing._id%>?_method=DELETE"method="post">
        <button class="btn btn-danger offset-1">
            delete
        </button>
    </form>
    </div>
    <% } %>
    <div class="mt-3 mb-3">
        <div>
            <%if (currUser){%>
            <h4>
            leave a review
        </h4>
        <form action="/listings/<%=listing.id%>/reviews"method="POST" novalidate class="needs-validation">
