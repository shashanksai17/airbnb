  <% layout("/layout/boilerplate")%>
  <div class="row">
    <div class="col-6 offset-3">
     <form action="/listings/<%=listing._id%>?_method=PUT"method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <h3>Editing the list</h3>
      <div class="mb-3">
      <label for="title"class="form-label">Title</label><br>
        <input type="text"name="listing[title]" placeholder="enter the title"value="<%=listing.title%>" class="form-control" required>
    </input>
    <div class="invalid-feedback">Enter valid name</div>
    </div>
    <br>
     <div class="mb-3">
         <label for="description"class="form-label">Description</label>
         <br>
       <textarea name="listing[description]" id="" placeholder="enter description"class="form-control" required><%=listing.description%></textarea>
        <div class="invalid-feedback">Enter valid description</div>
       <br>
      </div>
      <div class="mb-3">
        Original Listing Image
        <img src="<%= originalImageUrl %>" alt="">
      </div>
       <div class="mb-3">
        <label for="image"class="form-label">Upload New Image Link</label><br>
       <input name="listing[image]" type="file" class="form-control"/>
      
       <br>
       </div>
        <div class="row" class="mb-3">
       <div class="col-4">
         <label for="price"class="form-label" >Price</label><br>
        <input type="number"name="listing[price]"placeholder="enter the price"value="<%=listing.price%>"class="form-control"required>
    </input>
     <div class="invalid-feedback">Enter valid number</div>
    <br>
    </div>
    <div class="col-8">
         <label for="country"class="form-label">Country</label><br>
     <input type="text"name="listing[country]"value="<%=listing.country%>"class="form-control"required>
    </input>
     <div class="invalid-feedback">Enter country name</div>
    <br>
    </div>
  </div>
     <div class="mb-3">
        <label for="city"class="form-label">City</label><br>
      <input type="text"name="listing[location]"value="<%=listing.location %>"class="form-control"required>
    </input>
     <div class="invalid-feedback">Enter location name</div>
    <br>
    </div>
     
    <button class="btn btn-dark add-btn">
        update
    </button>
    </form>
    </div>
    </div>
